<div class="container">
  <div class="row">
    <div class="d-flex flex-column mb-3 p-5">
      <h1 class="text-center">URL SHORTENER</h1>
    </div>
    <img src="https://assets-lighthouse.alphacamp.co/uploads/image/file/16716/ExportedContentImage_00.png"
      class="mx-auto justify-content-center" style="width: 200px" alt="">

    <div class="mb-3 p-5">
      <p class="fs-2">Success!</p>
      <p class="fs-6">Your original url: {{ originalUrl }}</p>

      <label for="url" class="form-label"></label>
      <input readonly name="shortUrl" id="shortUrl" type="url" class="form-control" value="{{ origin }}/{{ shortUrl }}">
    </div>

    <div class="d-grid gap-2 col-2 mx-auto">
      <button onclick="copy()" type="button" class="btn btn-primary" id="copyButton">Copy</button>
    </div>
  </div>
</div>

<script>
  function copy() {
    const copyText = document.querySelector('#shortUrl')
    copyText.select()
    copyText.setSelectionRange(0, 99999)
    navigator.clipboard.writeText(copyText.value)
    alert("Url copied!")
  }
</script>