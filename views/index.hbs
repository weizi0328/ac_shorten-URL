<div class="container">
  <div class="row">
    <div class="d-flex flex-column mb-3 p-5">
      <h1 class="text-center">URL SHORTENER</h1>
    </div>
    <img src="https://assets-lighthouse.alphacamp.co/uploads/image/file/16716/ExportedContentImage_00.png"
      class="mx-auto justify-content-center" style="width: 200px" alt="">

    <form method="POST" action="/">
      <div class="mb-3 p-5">
        <label for="url" class="form-label"></label>
        <input name="url" id="url" type="url" class="form-control" aria-describedby="url" placeholder="Input URL here"
          required="required">
      </div>
      <div class="d-grid gap-2 col-4 mx-auto">
        <button type="submit" class="btn btn-outline-primary">Shorten</button>
      </div>
    </form>


  </div>
</div>